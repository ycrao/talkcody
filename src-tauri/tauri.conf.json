{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TalkCody",
  "version": "0.1.20",
  "identifier": "com.talkcody",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TalkCody",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**"
        ]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": [
          "talkcody"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI2QUNGM0RFMTc1OTlGM0MKUldROG4xa1gzdk9zSnRsZXorcytkdy9Eb3dCY0xQeUl3SUZPT3BPNGlMcDNGanhoUm5Fd3pIOVMK",
      "endpoints": [
        "https://api.talkcody.com/api/updates/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "providerShortName": null,
      "signingIdentity": null,
      "dmg": {
        "windowSize": {
          "width": 800,
          "height": 600
        }
      }
    }
  }
}
